{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/grpc-api/src",
  "monorepo": true,
  "root": "apps/grpc-api",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/grpc-api/tsconfig.app.json"
  },
  "projects": {
    "grpc-api": {
      "type": "application",
      "root": "apps/grpc-api",
      "entryFile": "main",
      "sourceRoot": "apps/grpc-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/grpc-api/tsconfig.app.json"
      }
    },
    "grpc-hybrid": {
      "type": "application",
      "root": "apps/grpc-hybrid",
      "entryFile": "main",
      "sourceRoot": "apps/grpc-hybrid/src",
      "compilerOptions": {
        "tsConfigPath": "apps/grpc-hybrid/tsconfig.app.json"
      }
    },
    "grpc-svc": {
      "type": "application",
      "root": "apps/grpc-svc",
      "entryFile": "main",
      "sourceRoot": "apps/grpc-svc/src",
      "compilerOptions": {
        "tsConfigPath": "apps/grpc-svc/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json",
        "assets": ["libs/common/src/**/*.proto"],
        "watchAssets": true
      }
    }
  }
}
